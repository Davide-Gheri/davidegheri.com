{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    // "allowJs": true,
    // "checkJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@utils": ["utils"],
      "@theme": ["theme"],
      "@interfaces": ["interfaces"],
      "@components/*": ["components/*"],
      "@styled-components": ["utils/styled/styled-components"]
    }
  }
}